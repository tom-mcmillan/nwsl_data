# Development Environment Template
# Quick setup for development environment

NWSL_ENV=development
NWSL_SERVER__PORT=8000
NWSL_SERVER__HOST=localhost
NWSL_SERVER__DEBUG=true

NWSL_DATABASE__PATH=data/processed/nwsldata.db
NWSL_DATABASE__TIMEOUT=30
NWSL_DATABASE__ECHO_SQL=true

NWSL_ANALYTICS__NIR_CALCULATION__ENABLE_CACHING=false
NWSL_ANALYTICS__NIR_CALCULATION__DEBUG_MODE=true

NWSL_LOGGING__LEVEL=DEBUG
NWSL_LOGGING__FILE=dev-notes/logs/development.log

NWSL_TOOLS__PLAYER_SEARCH_LIMIT=20
NWSL_TOOLS__ENABLE_EXPERIMENTAL_FEATURES=true

NWSL_DEV__ENABLE_HOT_RELOAD=true
NWSL_DEV__ECHO_SQL=true