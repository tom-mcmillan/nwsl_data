# Production Environment Template
# Optimized for production deployment

NWSL_ENV=production
NWSL_SERVER__DEBUG=false
NWSL_SERVER__HOST=0.0.0.0

NWSL_DATABASE__PATH=data/processed/nwsldata.db
NWSL_DATABASE__TIMEOUT=60
NWSL_DATABASE__POOL_SIZE=20
NWSL_DATABASE__ECHO_SQL=false

NWSL_ANALYTICS__NIR_CALCULATION__ENABLE_CACHING=true
NWSL_ANALYTICS__NIR_CALCULATION__CACHE_TTL=3600
NWSL_ANALYTICS__NIR_CALCULATION__DEBUG_MODE=false

NWSL_ANALYTICS__VISUALIZATION__CACHE_CHARTS=true
NWSL_ANALYTICS__VISUALIZATION__CHART_CACHE_TTL=1800

NWSL_LOGGING__LEVEL=INFO
NWSL_LOGGING__FORMAT="%(levelname)s: %(message)s"

NWSL_TOOLS__PLAYER_SEARCH_LIMIT=10
NWSL_TOOLS__MATCH_RESULTS_LIMIT=25
NWSL_TOOLS__ENABLE_EXPERIMENTAL_FEATURES=false

NWSL_PERFORMANCE__REQUEST_TIMEOUT=30
NWSL_PERFORMANCE__MAX_CONCURRENT_REQUESTS=100
NWSL_PERFORMANCE__ENABLE_COMPRESSION=true